<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.calvin.dao.RescueWorkerDao">

    <insert id="insert" parameterType="RescueWorker">
        insert into rescue_worker (account,password) values (#{account,jdbcType=VARCHAR} ,#{password,jdbcType=VARCHAR} );
    </insert>

    <update id="update" parameterType="String">
        update rescue_worker
        set password = #{password,jdbcType=VARCHAR}
        where account=#{account,jdbcType=VARCHAR}
    </update>

    <delete id="delete" parameterType="String">
        delete from rescue_worker where account =#{account,jdbcType=VARCHAR}
    </delete>

    <select id="selectAll"  resultType="RescueWorker">
        select account from rescue_worker
    </select>

    <select id="select" resultType="RescueWorker">
        select * from rescue_worker where account=#{account,jdbcType=VARCHAR}
    </select>
</mapper>